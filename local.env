# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=cmp_user
DB_PASSWORD=cmp_pass
DB_NAME=cmp_db
DB_SSLMODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-only-token
VAULT_NAMESPACE=

# OIDC Configuration
OIDC_ISSUER_URL=https://keycloak.example.com/realms/cmp
OIDC_CLIENT_ID=cmp-client
OIDC_CLIENT_SECRET=change-me

# JWT Configuration
JWT_SECRET=change-me-random-secret-32-bytes-long

# Service Configuration
SERVER_PORT=8082
LOG_LEVEL=info
ENVIRONMENT=development

# API Configuration
API_BASE_URL=http://localhost:8082
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Certificate Renewal
RENEWAL_CHECK_INTERVAL=1h
RENEWAL_WINDOW_DAYS=30

# Discovery
DISCOVERY_SCAN_INTERVAL=24h
DISCOVERY_WORKERS=10

# ServiceNow Integration (Optional)
SERVICENOW_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=your-username
SERVICENOW_PASSWORD=your-password

# Multi-Tenancy
DEFAULT_TENANT_ID=default-tenant
