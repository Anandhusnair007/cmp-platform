FROM golang:1.21-alpine AS builder
WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o bin/inventory-service ./cmd/inventory-service

FROM alpine:latest
RUN apk --no-cache add ca-certificates tzdata
WORKDIR /app
COPY --from=builder /build/bin/inventory-service /app/inventory-service
EXPOSE 8081
CMD ["/app/inventory-service", "-port=8081"]
