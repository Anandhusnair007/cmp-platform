# Production Environment Variables Example
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_USER=cmp_user
DB_PASSWORD=CHANGE-THIS-SECURE-PASSWORD
DB_NAME=cmp_db
DB_SSLMODE=require

# Redis Configuration
REDIS_HOST=your-redis-host.example.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE-THIS-REDIS-PASSWORD

# Vault Configuration
VAULT_ADDR=https://vault.yourdomain.com:8200
VAULT_TOKEN=CHANGE-THIS-VAULT-TOKEN
VAULT_NAMESPACE=cmp

# OIDC Configuration
OIDC_ISSUER_URL=https://keycloak.yourdomain.com/realms/cmp
OIDC_CLIENT_ID=cmp-client
OIDC_CLIENT_SECRET=CHANGE-THIS-CLIENT-SECRET

# JWT Configuration
JWT_SECRET=CHANGE-THIS-GENERATE-32-BYTE-RANDOM-SECRET

# Service Configuration
SERVER_PORT=8082
LOG_LEVEL=info
ENVIRONMENT=production

# API Configuration
API_BASE_URL=https://api.yourdomain.com
ALLOWED_ORIGINS=https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Certificate Renewal
RENEWAL_CHECK_INTERVAL=1h
RENEWAL_WINDOW_DAYS=30

# Discovery
DISCOVERY_SCAN_INTERVAL=24h
DISCOVERY_WORKERS=10

# ServiceNow Integration (Optional)
SERVICENOW_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=your-username
SERVICENOW_PASSWORD=your-password

# Multi-Tenancy
DEFAULT_TENANT_ID=default-tenant
