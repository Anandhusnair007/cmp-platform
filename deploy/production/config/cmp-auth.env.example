# CMP Auth Service - Production Environment Configuration
# Copy this file to /etc/cmp/cmp-auth.env and update with your values

# Server Configuration
SERVER_PORT=8084
LOG_LEVEL=info
GIN_MODE=release
ENVIRONMENT=production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=cmp_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_NAME=cmp_db
DB_SSLMODE=require

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0

# JWT Configuration
JWT_SECRET=CHANGE_THIS_GENERATE_32_BYTE_RANDOM_SECRET
JWT_EXPIRY=24h
JWT_ISSUER=cmp-platform

# OIDC Configuration (Optional)
OIDC_ISSUER_URL=https://keycloak.yourdomain.com/realms/cmp
OIDC_CLIENT_ID=cmp-client
OIDC_CLIENT_SECRET=CHANGE_THIS_CLIENT_SECRET

# Service Configuration
SERVICE_NAME=auth-service
METRICS_ENABLED=true
METRICS_PORT=9094

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60s

# Logging
LOG_FORMAT=json
LOG_OUTPUT=/var/log/cmp/auth-service.log

