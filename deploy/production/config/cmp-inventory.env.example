# CMP Inventory Service - Production Environment Configuration
# Copy this file to /etc/cmp/cmp-inventory.env and update with your values

# Server Configuration
SERVER_PORT=8081
LOG_LEVEL=info
GIN_MODE=release
ENVIRONMENT=production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=cmp_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_NAME=cmp_db
DB_SSLMODE=require

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0

# Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=CHANGE_THIS_VAULT_TOKEN
VAULT_NAMESPACE=cmp

# Service Configuration
SERVICE_NAME=inventory-service
METRICS_ENABLED=true
METRICS_PORT=9091

# Logging
LOG_FORMAT=json
LOG_OUTPUT=/var/log/cmp/inventory-service.log

